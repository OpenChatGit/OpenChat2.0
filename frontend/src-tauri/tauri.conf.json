{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OpenChat",
  "version": "0.1.3",
  "identifier": "com.nicol.openchat20",
  "build": {
    "frontendDist": "../src",
    "beforeDevCommand": "python .\\src-tauri\\start_backend_launcher.py"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "OpenChat",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
